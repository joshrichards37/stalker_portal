{% extends app['twig_theme'] ~ '/layout.twig' %}
{% set active = 'license-keys' %}
{% set title = 'License key'|trans ~ ': ' ~ 'About License key'|trans %}

{% block head %}
    
    {{ parent() }}
    <style type="text/css">
         {% include (app.twig_theme ~ "/LicenseKeys/about_license_keys/about_license_keys.css") %}
    </style>

{% endblock %}

{% block content %}
    <div id="license_keys_first">
        <div class="row">
            <div class="box">
                <div class="box-content">
                    <div class="box-content no-padding">
                        
                        <h3>{{"Broadcast content on any device" |trans }}</h3>

                        <img class="main-image" src="{{app.request_context.baseUrl}}/img/license-keys/ac-main.png" alt="">
                        
                        <p>{{"Owners of practically any device can become subscribers to your service." |trans }}</p>
                        <p>{{"Now you can connect to Ministra TV platform with the most popular media players and smart TVs." |trans }}</p>
                        <p>{{"This was made possible thanks to the release of Ministra Player, an easy-to-use application for viewing TV and video content that is available on an increasing number of platforms." |trans }}</p>
                        <p>
                            {{"The application can be downloaded for free, but its full functionality requires a License key." |trans }}<br>
                            {{"A License key is a unique set of symbols which licenses CPE to be compatible with the Ministra TV platform." |trans }}
                        </p>

                        <div class="header">{{"Get more information about buying a License key and learn more about the application's operation." |trans }}</div>

                        <div class="block-bordered block-wheretobuy">
							
                            <h5>{{ "Keys are purchased through" |trans ~ ":" }}</h5>
                            
                            <div class="link-box">
                                <a href="//www.infomir.eu/{% if attribute(app, 'language') is defined and app['language'] == "ru" %}rus/{% else %}eng/{% endif %}payments/" target="_blank">
                                    <img src="{{app.request_context.baseUrl}}/img/license-keys/ac-www.png" alt=""><br>
                                    infomir.eu/pay
                                </a>
                            </div>

                            <div class="link-box">
                                <a href="//www.infomir.eu/{% if attribute(app, 'language') is defined and app['language'] == "ru" %}rus/{% else %}eng/{% endif %}payments/" target="_blank">
                                    <img src="{{app.request_context.baseUrl}}/img/license-keys/ac-IM.png" alt=""><br>
                                    {{ "sales department" |trans }}
                                </a>
                            </div>

                        </div>

                        
                        <div class="block-bordered block-anyquestions">

                            <h5>{{ "Have any additional questions" |trans ~ "?" }}</h5>
                            
                            <div class="link-box">
                                <a href="mailto:ministra@infomir.com">
                                    <img src="{{app.request_context.baseUrl}}/img/license-keys/ac-email.png" alt=""><br>
                                    ministra@infomir.com
                                </a>
                            </div>

                        </div>
                        <div class="clearfix"></div>



                        <h3>{{ "Which devices are supported?" |trans }}</h3>
                        
                        <div class="block-block clearfix">
                                <img class="picture-device" src="{{app.request_context.baseUrl}}/img/license-keys/ac-device-1.png" alt="">
                                <h4>{{ "Infomir MAG Set-Top Boxes" |trans }}</h4>
                                <p>{{ "Set-Top Boxes produced by Infomir on Linux or Android operating systems are already to be connected to the Ministra TV platform." |trans }}</p>
                        </div>
                        
                        <div class="block-block clearfix">
                                <img class="picture-device" src="{{app.request_context.baseUrl}}/img/license-keys/ac-device-2.png" alt="">
                                <h4>{{ "Applications for Android and iOS" |trans }}</h4>
                                <p>{{ "The official applications for Apple TV, Android TV, iPad, iPhone, iPod touch, Android phones & tablets, Android STB can be downloaded and installed for free from app stores, but a License key will be needed." |trans }}</p>
                        </div>
                        
                        <div class="block-block clearfix">
                                <img class="picture-device" src="{{app.request_context.baseUrl}}/img/license-keys/ac-device-3.png" alt="">
                                <h4>{{ "Applications for media players and Smart TVs" |trans }}</h4>
                                <p>{{ "Applications for Roku media player, and Samsung Tizen TV and LG WebOS Smart TVs, can be downloaded and installed for free from app stores, but a License key will be needed." |trans }}</p>
                        </div>

                        <div class="text-center button-block">
                                <a href="//www.infomir.eu/{% if attribute(app, 'language') is defined and app['language'] == "ru" %}rus/{% else %}eng/{% endif %}payments/" target="_blank"
                                    class="btn btn-success">{{ "Buy a License key" |trans }}</a>
                        </div>
                        <br>
 
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}